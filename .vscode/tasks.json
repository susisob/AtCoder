{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "/usr/bin/g++",
            "args": [
                "-std=gnu++17",
                "-Wall",
                "-Wextra",
                "-O2",
                "-DONLINE_JUDGE",
                "-I${workspaceFolder}/ac-library",
                "-o",
                "'${workspaceFolder}/program'",
                "'${file}'",
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "c++ build for AtCoder",
            "type": "shell",
            "command": "g++",
            "args": [
            "-g",
            "-O0",
            "${file}",
            "-o",
            "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
            "cwd": "${fileDirname}"
            },
            "group": {
            "kind": "build",
            "isDefault": true
            }
        }
    ]
}